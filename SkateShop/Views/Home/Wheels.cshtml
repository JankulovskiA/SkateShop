@model IEnumerable<SkateShop.Models.Wheel>

@{
    ViewBag.Title = "Trucks";
}

<h1 style="color:ForestGreen">Trucks</h1>

@for (var i = 0; i < Model.Count(); i++)
{
    <div class="row">
        @for (var j = 0; j < 2; j++)
        {
        <div class="col-md-4 btn btn-default" style="border-radius: 15px; margin: 25px;">
            <a href=@Url.Action("ShowItem", "Home",new { id=Model.ElementAt(i).Id,type="Wheels"}) style="width:200px; height:200px">
                <img style="width:200px;height:200px" src="@Model.ElementAt(i).img" />
            </a> <br />
            @Html.ActionLink(Model.ElementAt(i).name, "ShowItem", new { id = Model.ElementAt(i).Id }, new { style = "color:ForestGreen" }) <br />
            @Html.DisplayFor(m => Model.ElementAt(i).price, new { })
            @if (User.IsInRole("Administrator"))
            {
                <br />
                @Html.ActionLink("Rederict", "Redirect", new { type = "Wheels" })
            }
        </div>
            if (i < Model.Count() - 1 && j < 1)
            { i++; }
            else
            { break; }
        }
    </div>

}