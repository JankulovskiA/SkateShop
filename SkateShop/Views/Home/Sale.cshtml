@model IEnumerable<SkateShop.Models.Item>

@{
    ViewBag.Title = "Sale";
}


<h1 style="color:ForestGreen">Sale</h1>

@for (var i = 0; i < Model.Count(); i++)
{
    <div class="row">
        @for (var j = 0; j < 2; j++)
        {
            <div class="col-md-4 btn btn-default" style="border-radius:15px;margin:25px;">
                <a style="width:200px; height:200px">
                    <img style="border-radius: 12px; width: 200px; height: 200px" src="@Model.ElementAt(i).img" />
                </a> <br />
                @Html.ActionLink(Model.ElementAt(i).name, "ShowItem", new { id = Model.ElementAt(i).Id }, new { style = "color:ForestGreen" }) <br />
                @Html.DisplayFor(m => Model.ElementAt(i).price, new { })
  
            </div>
            if (i < Model.Count() - 1 && j < 1)
            { i++; }
            else
            { break; }
        }
    </div>

}